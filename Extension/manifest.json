{
  "name": "Email Writer Extension",
  "description": "AI powered email writing assistant.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "https://mail.google.com/*",
    "https://outlook.live.com/*"
  ],
  "content_scripts": [
    {
        "js": ["content.js"],
        "matches": [
            "https://mail.google.com/*",
            "https://outlook.live.com/*"
        ],
        "css": ["content.css"],
        "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [ "icons/*" ],
      "matches": [
            "https://mail.google.com/*",
            "https://outlook.live.com/*"
        ]
    }
  ],

  "action": {
    "default_title": "Email Writer assistant"
  }
}
